---
import { SITE } from 'astrowind:config';
import { Image } from 'astro:assets';
import favicon from '~/assets/favicons/custom-f-logo.svg';
---

<div class="flex items-center">
  <div class="transition duration-200 ease-in hover:opacity-80">
    <Image
      src={favicon}
      alt="Logo"
      class="w-8 h-8"
      width={32}
      height={32}
    />
  </div>
  <span
    class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
  >
    {SITE?.name}
  </span>
</div>
